doctype html
html(lang='en')
  head
    title Material Design Web Demo
    meta(charset='utf-8')
    meta(content='IE=edge', http-equiv='X-UA-Compatible')
    meta(content='', name='description')
    meta(content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", name='viewport')
    link(rel='stylesheet' href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel='stylesheet' href='//fonts.googleapis.com/css?family=Roboto:300,400,500,700')
    link(rel='stylesheet' href='./demo.min.css')
    link(rel='stylesheet' href='./demo.ie11.min.css')
  body
    .nav
      ul.mdw-list
        .mdw-list__subheader Core
        label.mdw-list__row(for="show-bottomnav") bottomnav
        label.mdw-list__row(for="show-button") button
        label.mdw-list__row(for="show-menu") menu
        label.mdw-list__row(for="show-list") list
        label.mdw-list__row(for="show-progress") progress
        label.mdw-list__row(for="show-selection") selection
        label.mdw-list__row(for="show-tab") tab
        label.mdw-list__row(for="show-textfield") textfield
        label.mdw-list__row(for="show-toolbar") toolbar
        label.mdw-list__row(for="show-tooltip") tooltip
        .mdw-list__subheader Complex
        label.mdw-list__row(for="show-dialog") dialog
        label.mdw-list__row(for="show-search") search

    .page
      span Large Font Size
      input(type="checkbox" name="largeFontSize")
      div

      span RTL
      input(type="checkbox" name="rtl")
      div

      input(type="radio" name="show-component" value="bottomnav" id="show-bottomnav")
      input(type="radio" name="show-component" value="button"    id="show-button")
      input(type="radio" name="show-component" value="menu"      id="show-menu")
      input(type="radio" name="show-component" value="list"      id="show-list")
      input(type="radio" name="show-component" value="selection" id="show-selection" checked)
      input(type="radio" name="show-component" value="progress"  id="show-progress")
      input(type="radio" name="show-component" value="tab"       id="show-tab")
      input(type="radio" name="show-component" value="textfield" id="show-textfield")
      input(type="radio" name="show-component" value="toolbar"   id="show-toolbar")
      input(type="radio" name="show-component" value="tooltip"   id="show-tooltip")
      input(type="radio" name="show-component" value="dialog"    id="show-dialog")
      input(type="radio" name="show-component" value="search"    id="show-search")

      div

      #bottomnav-comparisons.comparisons
        include comparisons/bottomnav.pug
      #button-comparisons.comparisons
        include comparisons/button.pug
      #menu-comparisons.comparisons
        include comparisons/menu.pug
      #list-comparisons.comparisons
        include comparisons/list.pug
      #progress-comparisons.comparisons
        include comparisons/progress.pug
      #selection-comparisons.comparisons
        include comparisons/selection.pug
      #tab-comparisons.comparisons
        include comparisons/tab.pug
      #textfield-comparisons.comparisons
        include comparisons/textfield.pug
      #toolbar-comparisons.comparisons
        include comparisons/toolbar.pug
      #tooltip-comparisons.comparisons
        include comparisons/tooltip.pug
      #dialog-comparisons.comparisons
        include comparisons/dialog.pug
      #search-comparisons.comparisons
        include comparisons/search.pug


      #horizontalLine
      #verticalLineLeft
      #verticalLineRight
    script(src='./demo.min.js')
