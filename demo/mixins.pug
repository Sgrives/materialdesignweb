mixin androidstatusbar(color, tone)
  .androidstatusbar.mdw-theme__filled(mdw-color=color mdw-tone=tone)
    div 12:30
    i.material-icons(style="letter-spacing:2px") &#xE1BA;&#xE1C8;&#xE1A4;
mixin toolbar(color, tone, start, end)
  .mdw-toolbar.mdw-theme__filled(mdw-color=color mdw-tone=tone)
    .mdw-toolbar__action
      .mdw-toolbar__start
        each icon in start
          button.mdw-button(mdw-icon mdw-active).material-icons= icon
      .mdw-toolbar__title
        block
      .mdw-toolbar__end
        each icon in end
          button.mdw-button(mdw-icon mdw-active mdw-more-button=(icon === 'more_vert')).material-icons= icon
mixin androidnavbar
  .androidnavbar
    i.material-icons.back-button &#xE3C8;
    i.material-icons &#xE836;
    i.material-icons &#xE835;
mixin target(url)
  .target(style=`background-image: url(${url})`)